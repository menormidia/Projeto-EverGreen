//Tabela Pedidos no SQL Server:
//Campos: Id, NumeroPedido, DataEntrada, CNPJFaturamento, Itens, Observacoes, Status, UsuarioCriador.

CREATE TABLE Pedidos (
    Id INT PRIMARY KEY IDENTITY(1,1),
    NumeroPedido NVARCHAR(50) NOT NULL,
    DataEntrada DATETIME,
    CNPJFaturamento NVARCHAR(18),
    Itens NVARCHAR(255),
    Observacoes NVARCHAR(255),
    Status NVARCHAR(50),
    UsuarioCriador NVARCHAR(100)
);
